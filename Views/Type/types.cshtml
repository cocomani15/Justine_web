@model IEnumerable<justine_webapp.Models.Type>
    
<div class="pt-3">
        @if(Model.Count() > 0)
        {
            <form method="post">
            <div class="container-fluid">
                <div class="row">
               <div class="col-sm-12">
                        <div class="card">
                            <div class="card-body">
                                <h4 class="card-title">Basic Table</h4>
                                <a class="btn btn-success text-white mt-4" asp-controller="Type" asp-action="TypeViewModel">Add New Item</a>
                               
                                <div class="table-responsive">
                                    <table class="table user-table no-wrap">
                <thead>
                    <tr>
                        <th>Item</th>
                        <th>Type</th>
                        <th>Edit/Delete/Detail</th>
                       
                    </tr>
                </thead>
                <tbody>
                    @foreach (var tips in Model)
                    {
                      <tr>
                          <td>@tips.item.Name</td>
                          <td>@tips.Name</td>
                          <td>
                          <div class="btn-group" role="group">
                              <a asp-controller="Type" asp-action="EditType" asp-route-Id="@tips.id"
                               class="btn btn-success btn-secondary btn-sm">Edit</a>
                          </div>
                          <div class="btn-group" role="group">
                              <a class="btn btn-danger btn-secondary btn-sm">Delete</a>
                          </div>
                          <div class="btn-group" role="group">
                              <a class="btn btn-info btn-secondary btn-sm">Detail</a>
                          </div>
                        </td>
                      </tr>  
                      
                    }
                </tbody>
            </table>
             </div>
            </div>
            </div>
         </div>
         </div>
      </div>
      </form>
        }
        else
        {
            <p>No item Exist.</p>
        }
   
                </div>