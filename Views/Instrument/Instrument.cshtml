@model IEnumerable<justine_webapp.Models.Instrument>
@if (Model.Count() > 0)
{
    <div class="container-fluid">
        <div class="main-panel">
            <div class="content-wrapper">
                <div class="page-header">
                    <h3 class="page-title">Instrument</h3>
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="#">Tables</a></li>
                            <li class="breadcrumb-item active" aria-current="page"> Instrument tables </li>
                        </ol>
                    </nav>
                </div>
                <div class="row">
                    <div class="col-lg-12 grid-margin stretch-card">
                        <div class="card">
                            <div class="card-body">
                                <h4 class="card-title">Instrument Table</h4>
                                <div class="btn-group-sm" role="group">
                                    <a asp-controller="Instrument" asp-action="Create" class="btn btn-success float-right">Add New</a>
                                </div>
                                <div class="table-responsive">
                                    <table class="table table-hover">
                                        <thead>
                                            <tr>
                                                <th>Image</th>
                                                <th>Type</th>
                                                <th>Item</th>
                                                <th>Price</th>
                                                <th>Edit/Delete</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var x in Model)
                                            {
                                                <tr>
                                                    <td>@x.ImagePath ></td>
                                                    <td>@x.Type.Name</td>
                                                    <td>@x.Item.Name</td>
                                                    <td>@x.Price</td>
                                                    <td>
                                                        <div class="btn-group" role="group">
                                                           <a asp-controller="Instrument" asp-action="Create " class="mdi mdi-information-outline">Edit</a>
                                                            
                                                       
                                                        <form method="post">
                                                        <div class="btn-group" role="group">
                                                            <button
                                                        onclick="if(!confirm('Are you sure want to delete?')){return false}"
                                                        asp-action="DeleteView" asp-route-Id="@x.Id"
                                                        class="btn text-danger"><i class="mdi mdi-pencil">Delete</i></button>
                                                            
                                                        </div>
                                                    </form>  
                                                     </div>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <p>does not exist</p>
} 
